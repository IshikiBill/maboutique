{% extends 'base.html.twig' %}

{% block title %}Mon compte - Ishiki Shop
{% endblock %}

{% block content %}
	<h1>Mon compte</h1>
	{% if is_granted('ROLE_ADMIN') %}
		<small><a href="/admin">Vous êtes un administrateur, accéder au backoffice ?</a></small>
		<br/>
	Bienvenue
	{{ app.user.firstname }}
	dans votre compte.
	<br/>
	C'est dans cet espace que vous allez pouvoir gérer vos informations personnelles.
	<hr>
	{% endif %}
	

	

	<div class="row">
		<div class="col-md-4">
			<div class="account-item text-center" >
				<img src="{{ asset('assets/img/securite.png') }}" alt="Mot-de-passe">
				<a href="{{ path ('app_account_password') }}">Modifier mon mot de passe</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="account-item text-center" >
				<img src="{{ asset('assets/img/annuaire.png') }}" alt="Gérer mes adresses">
				<a href="{{ path ('app_account_address') }}">Gérer mes adresses</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="account-item text-center" >
				<img src="{{ asset('assets/img/logistique.png') }}" alt="Commandes">
				<a href="{{ path ('app_account_order') }}">Mes commandes</a>
			</div>
		</div>
	</div>
	
	<br/>
	<hr>
{% endblock %}
